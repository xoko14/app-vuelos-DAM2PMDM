<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/busquedaImg"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_baseline_search_24"
        style="@style/image_text"/>

    <LinearLayout
        android:id="@+id/lugaresLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@+id/busquedaImg">
        <TextView
            android:id="@+id/txtSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AAA"
            android:textSize="20sp"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            style="@style/image_text" />
        <TextView
            android:id="@+id/txtLlegada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BBB"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtNumPasajeros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lugaresLayout"
        android:layout_toEndOf="@id/busquedaImg"
        android:text="Pasajeros: 2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNumPasajeros"
        android:layout_toEndOf="@id/busquedaImg"
        android:text="11/11/2021"
        android:textSize="20sp" />
</RelativeLayout>